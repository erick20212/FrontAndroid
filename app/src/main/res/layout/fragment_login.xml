<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="36dp"
        android:paddingBottom="36dp">

        <!-- CONTENIDO SIN CARD, MÁS GRANDE -->
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Logo más grande -->
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="220dp"
                android:layout_height="140dp"
                android:layout_marginBottom="12dp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/app_name"
                android:src="@drawable/logowimi"/>

            <!-- Usuario (alto mayor) -->
            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_input_rounded"
                android:hint="Usuario"
                android:textColorHint="@color/wm_placeholder"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:inputType="textEmailAddress"/>

            <!-- Contraseña -->
            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_input_rounded"
                android:hint="Contraseña"
                android:textColorHint="@color/wm_placeholder"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:inputType="textPassword"/>

            <!-- Botón primario (más alto, sin sombra) -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                android:text="Iniciar sesión"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/btn_primary_gradient"
                android:elevation="0dp"
                android:stateListAnimator="@null"/>

            <!-- Botón secundario -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:text="Registrarme"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/btn_secondary_gradient"
                android:elevation="0dp"
                android:stateListAnimator="@null"/>

            <!-- Link -->
            <TextView
                android:id="@+id/txtSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="Seguir sin cuenta"
                android:textStyle="bold"
                android:textColor="@color/wm_purple_text"/>

            <!-- Progreso + error (ocultos) -->
            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/txtError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#B00020"
                android:gravity="center"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Separación inferior para respirar en pantallas altas -->
        <Space
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
