<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="#EEF1F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="14dp">

        <!-- ImageView que cargará el ícono de la categoría -->
        <ImageView
            android:id="@+id/imgIcono"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/app_name"/>

        <!-- Nombre de la categoría, que se actualizará desde el adaptador -->
        <TextView
            android:id="@+id/txtCategoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            android:textColor="#424B54"
            android:textSize="18sp"/>

        <!-- Imagen de flecha, también puede ser estática si no cambia -->
        <ImageView
            android:id="@+id/imgFlecha"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_flechaderecha"
            android:contentDescription="@string/app_name"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
